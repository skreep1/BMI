<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_calculate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".HomeActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/bmi_calculator"
        android:textColor="@color/dark_color"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/bmi_desc"
        android:textColor="@color/dark_color"
        android:textSize="30sp"></TextView>


    <TextView
        android:id="@+id/tv_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="310dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/bmi_height"
        android:textColor="@color/dark_color"
        android:textSize="24sp"></TextView>

    <EditText
        android:id="@+id/et_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_height"
        android:layout_margin="20dp"
        android:backgroundTint="@color/gray_color"
        android:hint="@string/height"
        android:inputType="number|numberDecimal"
        android:singleLine="false"
        android:textColor="@color/dark_color"
        android:textColorHint="@color/gray_color"

        >

    </EditText>

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_height"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/bmi_weight"
        android:textColor="@color/dark_color"
        android:textSize="24sp"></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_weight"
        android:layout_margin="20dp"
        android:backgroundTint="@color/gray_color"
        android:hint="@string/weight"
        android:textColor="@color/dark_color"
        android:inputType="number|numberDecimal"
        android:singleLine="false"
        android:textColorHint="@color/gray_color">

    </EditText>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-10dp"
        android:backgroundTint="@color/dark_color"
        android:text="@string/button_result"
        app:cornerRadius="0dp">

    </com.google.android.material.button.MaterialButton>


</RelativeLayout>
